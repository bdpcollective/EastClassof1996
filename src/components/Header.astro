    }
    
    .social-link svg {
      width: 16px;
      height: 16px;
    }
    
    .nav {
      display: none;
    }
    
    .class-year {
      font-size: 48px;
    }
    
    .banner-section {
      padding: 0 16px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 14px;
    }
  }
  
  @media (max-width: 480px) {
    .class-year {
      font-size: 36px;
    }
    
    .banner-section {
      padding: 0 8px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 12px;
    }

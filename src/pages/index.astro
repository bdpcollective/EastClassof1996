---
// Astro page component
import Header from '../components/Header.astro';
import ReunionEvents from '../components/ReunionEvents.astro';
import Memories from '../components/Memories.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&family=Noto+Serif:wght@400;700&display=swap" rel="stylesheet">
    <title>Lincoln East High School Class of 1996 | 30th Reunion</title>
    <meta name="description" content="Join us for the Lincoln East High School Class of 1996 30th Reunion! May 29-30, 2026 in Lincoln, Nebraska. Reconnect with classmates, share memories, and celebrate 30 years since graduation." />
    <meta property="og:title" content="Lincoln East High School Class of 1996 | 30th Reunion" />
    <meta property="og:description" content="Join us for the Lincoln East High School Class of 1996 30th Reunion! May 29-30, 2026 in Lincoln, Nebraska. Reconnect with classmates, share memories, and celebrate 30 years since graduation." />
    <meta property="og:image" content="https://static.wixstatic.com/media/4c7a9c_a04a64850b9f47c7adff59cfdc024a99~mv2.jpg/v1/fill/w_2500,h_1666,al_c/4c7a9c_a04a64850b9f47c7adff59cfdc024a99~mv2.jpg" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Lincoln East High School Class of 1996 | 30th Reunion" />
    <meta name="twitter:description" content="Join us for the Lincoln East High School Class of 1996 30th Reunion! May 29-30, 2026 in Lincoln, Nebraska. Reconnect with classmates, share memories, and celebrate 30 years since graduation." />
    <meta name="twitter:image" content="https://static.wixstatic.com/media/4c7a9c_a04a64850b9f47c7adff59cfdc024a99~mv2.jpg/v1/fill/w_2500,h_1666,al_c/4c7a9c_a04a64850b9f47c7adff59cfdc024a99~mv2.jpg" />
  </head>
  <body>
    <Header />
    
    <div class="banner">
      <div class="container">
        <div class="banner-section banner-left">
          <p>30TH HIGH</p>
          <p>SCHOOL REUNION</p>
        </div>
        <div class="banner-section banner-center">
          <p class="class-year">CLASS OF 1996</p>
        </div>
        <div class="banner-section banner-right">
          <p>LINCOLN</p>
          <p>NEBRASKA</p>
        </div>
      </div>
    </div>

    <div class="hero-section">
      <div class="hero-container">
        <div class="hero-left">
          <h2>30 Years of Memories, Friendships & Adventures</h2>
          <p class="hero-date">September 4-5, 2026 â€¢ Labor Day Weekend</p>
          <p>Reconnect with classmates and celebrate three decades of life after high school.</p>
        </div>
        <div class="hero-right">
          <img src="/EastClassof1996/lincoln-east-high-school-lincoln-ne-3-schoolphoto.avif" alt="Lincoln East High School" />
        </div>
      </div>
    </div>
    
    <main>
      <ReunionEvents />
      <Memories />
    </main>
    <Footer />
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
    overflow-x: hidden;
  }
  
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    min-width: 320px;
  }
  
  * {
    box-sizing: border-box;
  }

  .banner {
    background: #1e40af;
    color: white;
    padding: 32px 0;
  }
  
  .banner .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .banner-section {
    text-align: center;
    padding: 0 32px;
  }
  
  .banner-left {
    flex: 0.5;
    border-right: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  .banner-center {
    flex: 3;
    border-right: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  .banner-right {
    flex: 0.5;
  }
  
  .banner-section p {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    font-weight: 100;
    letter-spacing: 0.5px;
  }
  
  .banner-left p {
    font-size: 16px;
    line-height: 1.2;
  }
  
  .banner-right p {
    font-size: 16px;
    line-height: 1.2;
  }
  
  .class-year {
    font-family: 'Noto Serif', serif;
    font-size: 84px;
    font-weight: 400;
    line-height: 1;
  }

  .hero-section {
    background: #f9fafb;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .hero-container {
    display: flex;
    align-items: stretch;
    min-height: 400px;
  }

  .hero-left {
    width: 50%;
    padding: 64px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-sizing: border-box;
  }

  .hero-left h2 {
    font-family: 'Roboto', sans-serif;
    font-size: 64px;
    font-weight: 100;
    color: #1e40af;
    margin: 0 0 20px 0;
    line-height: 1.3;
  }

  .hero-left p {
    font-family: 'Roboto', sans-serif;
    font-size: 38px;
    font-weight: 100;
    color: #666;
    line-height: 1.3;
    margin: 0 0 20px 0;
  }
  
  .hero-left p.hero-date {
    font-weight: 500;
  }
  
  .hero-left p:last-child {
    margin-bottom: 0;
  }

  .hero-right {
    width: 50%;
    position: relative;
  }

  .hero-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.8;
  }

  /* Large monitors */
  @media (min-width: 1920px) {
    .banner .container {
      max-width: 1600px;
    }
    
    .class-year {
      font-size: 96px;
    }
    
    .hero-container {
      min-height: 500px;
    }
    
    .hero-left h2 {
      font-size: 72px;
    }
    
    .hero-left p {
      font-size: 42px;
    }
  }
  
  /* Tablet */
  @media (max-width: 1024px) {
    .class-year {
      font-size: 64px;
    }
  }
  
  /* Mobile */
  @media (max-width: 768px) {
    .class-year {
      font-size: 36px;
    }
    
    .banner-section {
      padding: 0 16px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 14px;
    }
    
    .hero-container {
      flex-direction: column;
      gap: 0;
      min-height: auto;
    }
    
    .hero-left,
    .hero-right {
      width: 100%;
    }
    
    .hero-left {
      padding: 40px 20px;
    }
    
    .hero-left h2 {
      font-size: 36px;
    }
    
    .hero-left p {
      font-size: 20px;
    }
    
    .hero-left p.hero-date {
      font-size: 18px;
    }
    
    .hero-right {
      height: 300px;
    }
  }
  
  @media (max-width: 480px) {
    .banner {
      padding: 15px 0;
    }
    
    .class-year {
      font-size: 22px;
    }
    
    .banner-section {
      padding: 0 3px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 9px;
      line-height: 1.1;
    }
    
    .hero-left {
      padding: 30px 15px;
    }
    
    .hero-left h2 {
      font-size: 28px;
    }
    
    .hero-left p {
      font-size: 18px;
    }
    
    .hero-right {
      height: 200px;
    }
  }
  
  @media (max-width: 390px) {
    .class-year {
      font-size: 20px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 8px;
    }
    
    .banner-section {
      padding: 0 2px;
    }
  }
  
  @media (max-width: 320px) {
    .banner {
      padding: 12px 0;
    }
    
    .class-year {
      font-size: 18px;
    }
    
    .banner-left p,
    .banner-right p {
      font-size: 7px;
    }
    
    .banner-section {
      padding: 0 1px;
    }
  }
</style>